{
  "listeners": {
      "*:80": {
          "pass": "routes"
      }
  },
  "routes": [
      {
          "match": {
              "uri": "/*"
          },
          "action": {
              "share": "/var/www/html/public$uri",
              "fallback": {
                  "pass": "applications/php"
              }
          }
      }
  ],
  "applications": {
      "php": {
          "type": "php",
          "root": "/var/www/html/public",
          "index": "index.php"
      }
  }
}